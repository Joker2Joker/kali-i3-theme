        focused_workspace    #9D00FF #9D00FF #FFFFFF   # 当前工作区（紫色）
        inactive_workspace   #333333 #333333 #888888   # 非活动工作区（深灰）
        urgent_workspace     #FF0000 #FF0000 #FFFFFF   # 紧急工作区（红色）
    }

    # 字体配置（可选，按需替换为系统已有字体）
